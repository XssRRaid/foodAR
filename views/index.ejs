    <style>
        
        /* Style the tab */
        .tab {
          overflow: hidden;
          border: 1px solid #0c9f8f;
          /* background-color: #f1f1f1; */
        }
        
        /* Style the buttons inside the tab */
        .tab button {
          background-color: inherit;
          float: left;
          border: none;
          outline: none;
          cursor: pointer;
          padding: 14px 16px;
          transition: 0.3s;
          font-size: 17px;
        }
        
        /* Change background color of buttons on hover */
        .tab button:hover {
          background-color: #0a9384;
        }
        
        /* Create an active/current tablink class */
        .tab button.active {
          background-color: #0c9f8f;
        }
        
        /* Style the tab content */
        .tabcontent {
          display: none;
          padding: 6px 12px;
          border: 1px solid #0c9f8f;
          border-top: none;
        }
        </style>

</head>
<body>

